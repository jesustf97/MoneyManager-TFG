<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.InfoFragment">


    <TextView
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:id="@+id/textViewInfoEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewInfoAvatar" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewInfoName"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoName" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewInfoEmail" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/totalBalanceText"/>
    <ImageView
            android:src="@drawable/button_ripple_background"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageViewInfoAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/update_balance_button"
            android:background="@color/colorGoogleExtra"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:id="@+id/editBalanceButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Saldo total:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalBalanceText"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextTotalBalance" android:layout_marginEnd="8dp"
            android:layout_marginBottom="208dp"
            app:layout_constraintBottom_toTopOf="@+id/editBalanceButton" app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintTop_toBottomOf="@+id/textViewInfoName" android:layout_marginTop="32dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="0 euros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTotalBalance"
            android:textSize="18sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textViewInfoName"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>